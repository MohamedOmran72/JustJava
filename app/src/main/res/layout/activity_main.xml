<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohammedomran.justjava.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wallpaper" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/name_editText_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Name"
                android:inputType="textCapWords"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">


                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="hot drinks"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <RadioButton

                        android:id="@+id/tea_RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#ffffff"
                        android:text="Tea"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />


                    <RadioButton
                        android:id="@+id/cappuccion_RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#ffffff"
                        android:text="Cappuccion"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/coffeeBlend_RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#ffffff"
                        android:text="Coffee blend"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/mochaCoffee_RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#ffffff"
                        android:text="Mocha coffee"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />


                    <RadioButton
                        android:id="@+id/frenchCoffee_RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#ffffff"
                        android:text="French coffee"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="iced drinks"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/icedCappuccion_RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#ffffff"
                        android:text="Iced cappuccion"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/icedChocolata_RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#ffffff"
                        android:text="Iced chocolata"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/icedMocha_RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#ffffff"
                        android:text="Iced mocha"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/icedVanilla_RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:buttonTint="#ffffff"
                        android:text="Iced vanilla"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />


                    <RadioButton
                        android:id="@+id/icedTea_RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#ffffff"
                        android:text="Iced tea"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/toppings"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/whipped_cream_CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#ffffff"
                        android:paddingLeft="24dp"
                        android:text="Whipped Cream"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/Chocolate_CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#ffffff"
                        android:paddingLeft="24dp"
                        android:text="Chocolate "
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Quantity"
                        android:textAllCaps="true"
                        android:textColor="#ffffff" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:onClick="decrement"
                            android:text="-" />

                        <TextView
                            android:id="@+id/quantity_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="2"
                            android:textColor="#ffffff"
                            android:textSize="16sp" />

                        <Button
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:onClick="increment"
                            android:text="+" />

                    </LinearLayout>


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/quantity_text_view"
                        android:layout_marginTop="16dp"
                        android:onClick="submitOrder"
                        android:text="Order" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</android.support.constraint.ConstraintLayout>
